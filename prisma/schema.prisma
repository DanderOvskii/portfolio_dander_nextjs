generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id           String    @id @default(uuid())
  firstName    String
  lastName     String
  profileImage String
  email        String    @unique
  password     String
  role         Role
  dateOfBirth  DateTime
}

model Project {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  projectDate DateTime
  languages   String   // fixed typo: "laguages" â†’ "languages"
  image       String?  // made optional in case no image is provided
  website     String?  // made optional since not all projects may have a site
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}